{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "#root/*": ["./src/*"]
    },
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution":"node",
    "types": ["node"],
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "allowUnreachableCode": false,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "declarationDir": "./dist",
    "outDir": "./dist",
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
      "src/**/*"
  ],
  "exclude": ["./node_modues"]
}
